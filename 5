#include <stdio.h>
#include <malloc.h>
#include <math.h>

float dlina(float x1, float x2, float y1, float y2){
    float dl = 0;
    dl=sqrt(pow(x2-x1,2) + pow(y2-y1,2));
    return dl;
}
float sTrianle(float a, float b, float c){
    float p, s;
    p = (a+b+c)/2;
    s = sqrt(p * (p - a) * (p - b) * (p - c));
    return s;
}

int main() {
    float *x, *y, sX, sY, s, a, b, c;
    int n;
    scanf_s("%d" ,&n);
    x=(float*)malloc(n * sizeof(float ));
    y=(float*)malloc(n * sizeof(float));

    for(int i=0; i<n; i++)
        scanf_s("%f %f",(x + i),(y+i));



    sX = *(x);
    sY = *(y);
    for(int i = 1; i < n-1; i++){
        a = dlina(sX,*(x+i),sY, *(y+i));
        b = dlina(*(x+i),*(x+i+1),*(y+i), *(y+i+1));
        c = dlina(sX,*(x+i+1),sY, *(y+i+1));
        s += sTrianle(a,b,c);
    }
    printf("%f", s);

    free(x);
    free(y);
    return 0;
}
